@{
    ViewData["Title"] = "Send Email";
}

<h2 class="custom-label">Send Email</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<form asp-action="SendEmail" method="post">
    <div class="form-group mb-3">
        <label for="toEmail" class="custom-label">Recipient Email</label>
        <input type="email" name="toEmail" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label for="subject" class="custom-label">Subject</label>
        <input type="text" name="subject" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label for="body" class="custom-label">Message</label>
        <textarea name="body" class="form-control" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send Email</button>
</form>
