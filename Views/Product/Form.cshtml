@{
}
@model CoffeeShopManagment.Models.ProductModel
<div class="container">

    <section class="section">
        <div class="row">
            <div class="col">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Product</h5>

                        <!-- General Form Elements -->
                        <form asp-controller="Product" asp-action="ProductSave" method="post">
                            <input asp-for="ProductId" type="hidden" />
                            <div class="row mb-3">
                                <label asp-for="ProductName" for="inputText" class="col-sm-2 col-form-label">Product Name</label>
                                <div class="col-sm-10">
                                    <input asp-for="ProductName" type="text" class="form-control">
                                    <span asp-validation-for="ProductName" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="ProductPrice" for="inputText" class="col-sm-2 col-form-label">Product Price</label>
                                <div class="col-sm-10">
                                    <input asp-for="ProductPrice" type="number" class="form-control">
                                    <span asp-validation-for="ProductPrice" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="ProductCode" class="col-sm-2 col-form-label">Product Code</label>
                                <div class="col-sm-10">
                                    <input asp-for="ProductCode"type="text" class="form-control">
                                    <span asp-validation-for="ProductCode" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Description" class="form-control" style="height: 100px"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="UserId" class="col-sm-2 col-form-label">User Name</label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                        <option value="">Select User</option>
                                    </select>

                                    <span asp-validation-for="UserId" class="text-danger"></span>

                                </div>
                            </div>



                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit Form</button>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>


        </div>
    </section>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}