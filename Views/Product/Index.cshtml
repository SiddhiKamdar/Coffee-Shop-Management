@{
}

@model DataTable;
@using System.Data
<div class="d-flex justify-content-between align-items-center mb-3">
    <div></div>
    <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Form">
        <i class="bi bi-plus-lg"></i> Add
    </a>
</div>
<div class="d-flex justify-content-between align-items-center mb-3">
    <div></div>
    <a class="btn btn-primary" asp-controller="Product" asp-action="ExportToExcel">
        <i class="bi bi-file-earmark-excel"></i> Export as Excel
    </a>
</div>
<h6 class="text-danger">@TempData["Error Message"]</h6>
<table class="table">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>Product Name</th>
            <th>Product Code</th>
            <th>Product Price</th>
            <th>Product Description </th>
            <th>User Name</th>
            <th>Actions</th>

        </tr>
    </thead>
    @foreach (DataRow dataRow in Model.Rows)
    {
        <tr>
            <td>@dataRow["ProductId"]</td>
            <td>@dataRow["ProductName"]</td>
            <td>@dataRow["ProductCode"]</td>
            <td>@dataRow["ProductPrice"]</td>
            <td>@dataRow["Description"]</td>
            <td>@dataRow["UserName"]</td>
            <td>
                <a asp-area="" asp-controller="Product" asp-action="Form" class="btn btn-outline-warning btn-sm">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <form method="post" asp-controller="Product" asp-action="ProductDelete">
                    <input type="hidden" name="ProductID" value="@dataRow["ProductID"]" />
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>

            </td>

        </tr>
    }
</table>